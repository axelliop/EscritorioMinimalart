{
  "name": "mi-app",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "start": "electron .",
    "package": "electron-builder --win",
    "postinstall": "npx playwright install chromium --with-deps",
    "prepackage": "npx playwright install chromium"
  },
  "build": {
    "appId": "com.miapp.minimalart",
    "productName": "Automatizaci√≥n Minimalart",
    "icon": "build/minimalart.ico",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "backend/**/*",
      "frontend/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/",
        "to": "backend/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "frontend/dist/",
        "to": "frontend/dist/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "framer-motion": "^10.0.0",
    "playwright": "^1.52.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "vite": "^5.4.14"
  }
}
